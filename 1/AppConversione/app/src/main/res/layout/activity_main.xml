<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="8"
        android:inputType="numberDecimal"
        android:layout_above="@+id/button"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:hint="Inserisci valuta"
        android:gravity="center"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_marginBottom="48dp"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:entries="@array/array_value" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Converti"/>

    <TextView
        android:id="@+id/textViewEUR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        tools:text="VALUTE EUR"/>

    <TextView
        android:id="@+id/textViewUSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEUR"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        tools:text="VALUTE USD"/>

    <TextView
        android:id="@+id/textViewGBP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewUSD"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        tools:text="VALUTE GBP"/>


</RelativeLayout>